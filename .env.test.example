# Test Environment Configuration
# Copy this file to .env.test and update values for testing

# Application URL for E2E tests
APP_URL=http://localhost:3000

# Test Database (SQLite for CI)
DATABASE_URL="file:./test.db"

# Auth Configuration for Testing
AUTH_SECRET="test-secret-key-minimum-32-characters-long"
NEXTAUTH_URL=http://localhost:3000

# Test OAuth Providers (optional, use mock values)
GOOGLE_CLIENT_ID="test_google_client_id"
GOOGLE_CLIENT_SECRET="test_google_client_secret"
GITHUB_ID="test_github_id"
GITHUB_SECRET="test_github_secret"

# Test Email Configuration (optional)
FROM_EMAIL="test@example.com"
RESEND_API_KEY="test_resend_api_key"

# NextAuth Configuration
NEXTAUTH_SECRET="test-nextauth-secret-minimum-32-characters"

# Test Stripe Configuration (use test keys)
STRIPE_SECRET_KEY="sk_test_dummy_key_for_testing"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_dummy_key_for_testing"
STRIPE_WEBHOOK_SECRET="whsec_dummy_key_for_testing"

# Test Redis Configuration (optional)
UPSTASH_REDIS_REST_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_TOKEN="dummy_token_for_testing"

# Test AWS Configuration (optional)
AWS_ACCESS_KEY_ID="test_aws_access_key"
AWS_SECRET_ACCESS_KEY="test_aws_secret_key"
AWS_REGION="us-east-1"
S3_USER_BUCKET="test-bucket"
NEXT_PUBLIC_CLOUDFRONT_PUBLIC_URL="https://test.cloudfront.net"

# Rate Limiting (disable for tests)
RATE_LIMIT_ENABLED=false